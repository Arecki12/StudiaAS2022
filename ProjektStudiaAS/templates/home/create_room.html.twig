{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">
    <form action="/create-room" method="POST">
        <label for="username">Username:</label>
        <input type="text" class="form-control" id="username" name="_username" />

        <label for="username">Email:</label>
        <input type="text" class="form-control" id="username" name="_email" />

        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="_password"/>

        <label for="password_repeat">Repeat password:</label>
        <input type="password" class="form-control" id="password_repeat" name="_repeat_password"/>

        <input type="hidden" name="token" value="{{ csrf_token('app_register') }}"/>
        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button class="btn btn-lg btn-primary" type="submit">Register</button>
    </form>
    </div>
{% endblock %}