{% extends 'base.html.twig' %}

{% block body %}
    <main role="main">

        <section class="jumbotron text-center">
            <div class="container">
                <h1 class="jumbotron-heading">Available rooms</h1>
                {% if app.user == null %}
                    <a href="/register" class="btn btn-primary my-2">Register</a>
                    <a href="/login" class="btn btn-secondary my-2">Login</a>
                {% endif %}
                {% if app.user != null %}
                    <a href="/logout" class="btn btn-primary my-2">Logout</a>
                {% endif %}
                </p>
            </div>
        </section>

        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row">
                    {% for availableRoom in availableRooms %}
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <h2>{{ availableRoom.name }}</h2>
                            <img class="card-img-top" src="" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">{{ availableRoom.description }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Book now</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">More informations</button>
                                    </div>
                                    <small class="text-muted">Price:  EUR</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}